<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnl_row_client"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_margin="1dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:background="@drawable/linear_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_compny_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Seven hill ltd"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_invoice_nbr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="5471"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="DR8"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="1111111"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txt_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="158555"
                    android:textStyle="bold"
                    android:textSize="11dp"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnl_status"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/mybutton_save"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/colorWhite"
                        android:paddingRight="6dp"
                        android:textSize="8dp"
                        android:text="Approve"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="#19393838"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>