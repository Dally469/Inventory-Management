<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="Name product"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Quantity : "
                        android:fontFamily="sans-serif-condensed"/>
                    <TextView
                        android:id="@+id/tv_product_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorPrimary"
                        android:text="Name product"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9dp"
                    android:layout_weight="1"
                    android:text="Total Amount"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorGreen"
                    android:textSize="9dp"
                    android:layout_weight="1"
                    android:text="Paid Amount"/>
                <TextView
                    android:id="@+id/tv_title_rest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorRed"
                    android:textSize="9dp"
                    android:layout_weight="1"
                    android:text="Rest Amount"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Total Amount"/>
                <TextView
                    android:id="@+id/paid_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/colorGreen"
                    android:textSize="11dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Paid Amount"/>
                <TextView
                    android:id="@+id/rest_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorRed"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Rest Amount"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnl_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/linear_background"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_check_circle_24"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:textColor="@color/colorGreen"
                android:textSize="13dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Thank you\n Payment Complete Successfuly"/>
        </LinearLayout>
        <EditText
            android:id="@+id/product_price_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myedittext"
            android:padding="9dp"
            android:inputType="numberDecimal"
            android:layout_margin="3dp"
            android:hint="Paid Amount"/>
        <EditText
            android:visibility="gone"
            android:id="@+id/product_price_remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myedittext"
            android:padding="9dp"
            android:inputType="numberDecimal"
            android:layout_margin="3dp"
            android:hint="Remain Amount"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="Save Sales"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:padding="5dp"
            android:drawableTint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:textColor="@color/colorWhite"
            android:background="@drawable/mybuttton_gray"
            android:layout_gravity="right"
            />

    </LinearLayout>
</LinearLayout>